<h1>Photo Blog - Food for the Soul</h1>

<div class="container-fluid">
    <div class="row justify-content-md-center">
        
        <% @posts.each do |p| %>
        <div class="show-width">
            <div class="posts">
                <div class="tiny-font text-right">Posted <%= time_ago_in_words(p.created_at) %> ago.</div>
                <div class="top-post">
                    <div class="index-img"><%= link_to(image_tag(p.image.url(:medium)), post_path(p)) %></div>
                    <div class="index-titles">
                        <p><%= p.caption %></p> 
                        <p>Location: <%= p.location %></p>
                        <p><%= truncate p.blog, length: 160 %></p>
                    </div>
                </div>
                
            </div>
        </div>
        <% end %>
        
    </div>
</div>


