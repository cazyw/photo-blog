<%= stylesheet_link_tag "registrations" %>

<h1>Sign up</h1>

<div class="container-fluid">
    <div class="row justify-content-md-center">
     <div class="col-md-8 edit-post">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :user_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, defaultValue: "#ffbb33", position: :right}}} %>
  </div>
  <div class="row justify-content-md-center">
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

        
        </div>
    </div>
</div>
</div>